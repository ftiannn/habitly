{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "declaration": false
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.spec.ts", 
    "src/**/__tests__/*.ts",
    "src/test/**/*.ts"
  ]
}
